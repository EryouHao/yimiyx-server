.login {
  width: 100%;
  height: 100%;
  position: relative;
  &-bg {
    width: 100%;
    height: 100%;
    background-image: url('../assets/login_images/background.png');
    // background-image: url('../assets/login_image/login_bg.jpg');
    background-size: cover;
    background-position: center;
    transition: all 0.5s linear 0s;
    &:hover {
      transform: scale(1.2);
    }
  }
  &-con {
    position: absolute;
    right: 160px;
    top: 50%;
    transform: translateY(-60%);
    width: 300px;
    &-header {
      font-size: 16px;
      font-weight: 300;
      text-align: center;
      padding: 30px 0;
    }
    .form-con {
      padding: 10px 0 0;
    }
    .login-tip {
      font-size: 10px;
      text-align: center;
      color: #c3c3c3;
    }
  }
}
